<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:desktop="clr-namespace:Client.Views.Desktop"
    xmlns:phone="clr-namespace:Client.Views.Phone"
    xmlns:views="clr-namespace:Client.Views"
    xmlns:local="clr-namespace:Client"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{OnIdiom Desktop={DataTemplate desktop:DesktopHomePage}, Phone={DataTemplate phone:PhoneHomePage}}"
        Route="MainPage" />

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
    <ShellContent
        Title="Add Games"
        Icon="addproduct.png"
        ContentTemplate="{OnIdiom Desktop={DataTemplate desktop:AddProductPage}, Phone={DataTemplate phone:PhoneAddProductPage}}" />
</FlyoutItem>
<!-- ContentTemplate="{OnIdiom Desktop={DataTemplate desktop:DesktopHomePage}, Phone={DataTemplate phone:PhoneHomePage}}" -->

</Shell>
